# This is an example file. Copy this to .env and fill in your actual values.

# MongoDB Connection URL
# Replace the placeholder value with your actual MongoDB connection string.
DB_URL="mongodb+srv://<username>:<password>@your-cluster.mongodb.net/<database_name>?retryWrites=true&w=majority"

# JWT Secret Key for token generation
# Use a long, random, and secret string here for security.
JWT_SECRET_KEY="your_super_secret_jwt_key"

# Cloudinary Credentials for image uploads
CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"

# Frontend URL for CORS configuration
FRONTEND_URL="http://localhost:5173"
