# MongoDB Connection URL
# IMPORTANT: Replace the placeholder value below with your actual MongoDB connection string.
# Example for a local MongoDB instance: DB_URL="mongodb://localhost:27017/himtaj"
# Example for MongoDB Atlas: DB_URL="mongodb+srv://<username>:<password>@your-cluster.mongodb.net/<database_name>?retryWrites=true&w=majority"
DB_URL="YOUR_MONGODB_CONNECTION_STRING_HERE"

# JWT Secret Key for token generation - CHANGE THIS to a long, random string for security
JWT_SECRET_KEY="your_super_secret_jwt_key_please_change_me"

# Cloudinary Credentials for image uploads (Optional, if you use Cloudinary)
CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"

# Frontend URL for CORS configuration
FRONTEND_URL="http://localhost:5173"
